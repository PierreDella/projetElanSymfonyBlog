{% extends 'admin.html.twig' %}

{% block title %}Nos utilisateurs{% endblock %}

{% block body %}
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Pseudo</th>
            <th>Date de naissance</th>
            <th>Email</th>
            <th>Inscription</th>
            <th>Recettes</th>
            <th>Abonn√©s</th>
            <th>Abonnement</th>            
        </tr>
    </thead>

    <tbody>
{% for user in users %}
    <tr>
        <td>
            {{ user.pseudo }}
        </td>
        <td>
            {{ user.dateNaissance | date('d/m/Y') }}
        </td>
        <td>
            {{ user.email }}
        </td> 
        <td>
            {{ user.dateInscription | date('d/m/Y') }}
        </td>  
        <td>
            {{ user.recipes | length }}
        </td>
        <td>
            {{ user.subscribers | length }}
        </td>
        <td>
            {{ user.listSubscriptions | length }}
        </td>
        <td>
            <a href="{{ path('user_delete', {'id':user.id}) }}">Supp</a>
        </td>
    </tr>
{% endfor %}
    </tbody>
</table>   
{% endblock %}
