{% extends 'base.html.twig' %}

{% block title %}Toutes nos recettes{% endblock %}

{% block body %}
    <div class="container">
        
        
    </div>


<div class="container">
    <div class="row">
        <div class="filter">
                {% include 'home/_filter.html.twig' %}
        </div>
            
    </div>

    <div class="grid">
        {% for recipe in recipes %}
            <div class="card">
                <img class="card-img-top" src= "{{ asset('uploads/profilpicture/' ~ recipe.picture) }}" alt="picture">
            </div>
            <div class="card-body">
                <a href="{{ path('detailRecipe', {'id':recipe.id}) }}" class="card-title">{{ recipe.name }}</a>
                <p class="card-text">{{ recipe.preparationTime }} minutes</p>
                <p class="card-text">{{ recipe.comments | length }} commentaire(s)</p>
                <p class="card-text">{{ recipe.description }}</p>
                <a href="{{ path('recipe_like', {'id': recipe.id}) }}" class="btn btn-link js-like">
                {% if app.user and recipe.isLikedByUser(app.user) %}
                    <i class="fas fa-thumbs-up"></i>
                {% else %}
                    <i class="far fa-thumbs-up"></i>
                {% endif %}
                    <span class="js-likes">{{ recipe.likes | length }}</span>
                    <span class="js-label">like<span>
                </a>
                <a href="#" class=""></a>
            </div>
            <div></div>
        {% endfor %}
    </div>
</div>
                        
<style>
    .grid{
        display : grid;
        grid-template-columns : repeat(3,1fr);
        grid-gap: 20px
    }
    .card-title{
        font-weight : bold;
        font-size : 1.5em;

    }
</style> 
        
    
    
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    
    <script>
       function onClickBtnLike(event){
            //
            event.preventDefault();
            //on prend l'url du lien pour l'avoir dans ajax
            const url = this.href; //this sera l'element <a> sur lequel on clique
            
            //recher le span avec class js-likes
            const spanCount = this.querySelector('span.js-likes');

            const icone = this.querySelector('i');
            
            //peut etre appel√© en POST
            //axios permet gestion des promesses qui. La reponse sera ensuite mis dans la fonction
            axios.get(url).then(function(response){
                // const likes = response.data.likes;
                spanCount.textContent = response.data.likes;
                //si contient la class 'fas' = aime, alors remplacera par "far"
                if(icone.classList.contains('fas')){
                    icone.classList.replace('fas', 'far');
                } else {
                    icone.classList.replace('far', 'fas');
                }
                   
               
                    
            })
        }
        // selection de tout les <a> avec js-like 
        document.querySelectorAll('a.js-like').forEach(function(link){
        //quand clique appel de la finction onClick
        link.addEventListener('click', onClickBtnLike);
        })
    </script>
        
    
{% endblock %}