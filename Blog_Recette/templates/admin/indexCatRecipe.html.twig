{% extends 'admin.html.twig' %}

{% block title %}Catégories de recette{% endblock %}

{% block body %}
    <div class="title">
        <h1>Liste des catégories de recette</h1>
        <a href="{{ path('new_catRecipe') }}">Ajouter une catégorie</a>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="table-success">Catégories</th>
                <th class="table-success"></th>
                <th class="table-success"></th>
                <th class="table-success"></th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td class="table">
                    {{ categorie.name }}
                </td>
                <td colspan="2" class="table">
                    <a href="{{ path('edit_catRecipe', {'id':categorie.id}) }}">Edit</a>
                </td>
                <td>
                    <a class="confirmation" href="{{ path('categoryRecipe_delete', {'id':categorie.id}) }}">
                        <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-x" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                        </svg>
                    </a>
                </td>
            </tr>
        <tr>

        {% endfor %}

        </tbody>
    </table>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}