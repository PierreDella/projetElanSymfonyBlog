{% extends 'Admin.html.twig' %}

{% block title %}Nos utilisateurs{% endblock %}

{% block body %}

<div class="col-md-6">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title textCentre">Les derniers utilisateurs inscrits</h5>
            <table  class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Pseudo</th>
                    <th>Date de naissance</th>
                    <th>Email</th>
                    <th>Date d'inscription</th>
                    <th>Commentaires</th>
                    <th>Recettes</th>
                    <th>Abonn√©s</th>
                    <th>Abonnements</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id':user.id }) }}">{{ user.pseudo }}</a> </td>
                <td> {{ user.dateNaissance | date('d/m/Y') ~ " (" ~ date().diff(date(user.dateNaissance)).y ~ " ans)" }} </td>
                <td> {{ user.email }}</td>
                <td> {{ user.dateInscription | date('d/m/Y')}}</td>
                 <td>
                    {{ user.comments | length }}
                </td>
                <td>
                    {{ user.recipes | length }}
                </td>
                <td>
                    {{ user.subscribers | length }}
                </td>
                <td>
                    {{ user.listSubscriptions | length }}
                </td>
            </tr>
            {% endfor %}
            </tbody>
            </table>
        </div>
    </div>
    <br>
        <a class= "icon_add" href="{{ path('user_index') }}"><button type="button" class="btn btn-dark">Tous les utilisateurs</button></a>
    <br><br>
</div>
               
               
  
    
{% endblock %}
