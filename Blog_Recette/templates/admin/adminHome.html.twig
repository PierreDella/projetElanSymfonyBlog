{% extends 'Admin.html.twig' %}

{% block title %}Nos utilisateurs{% endblock %}

{% block body %}
    <div class="body-dash">
        <div class="row">
            <div class="col1 col-sm-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title textCentre">Les derniers utilisateurs inscrits</h5>
                        <table class="table table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>Pseudo</th>
                                    <th>Abonnés</th>
                                    <th>Recettes</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>
                                        <a href="{{ path('user_show', {'id':user.id}) }}">{{ user.pseudo }}</a>
                                    </td>
                                    <td> {{ user.subscribers | length }} </td>
                                    <td>{{ user.recipes | length }}</td>
                                    <td></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <p>Nombre total d'utilisateurs : {{ users | length }}</p>
                        <a class= "icon_add" href="{{ path('user_index') }}"><button type="button" class="btn btn-dark">Tous les utilisateurs</button></a>
                    </div>
                </div>
            </div>
            <div class="col2 col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title textCentre">Les dernieres recettes ajoutés</h5>
                        <table  class="table table-striped table-responsive">
                            <thead>
                                <tr>
                                    <th>Nom</th>
                                    <th>Date de création</th>
                                    <th>Nb commentaires</th>
                                    <th>Likes</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for recipe in recipes %}
                                <tr>
                                    <td>
                                        <a href="{{ path('detailRecipe', {'id':recipe.id}) }}">{{ recipe.name }}</a> 
                                    </td>
                                    <td> {{ recipe.createdAt | date('d/m/Y') }} </td>
                                    <td> {{ recipe.comments | length }}</td>
                                    <td>
                                        {{ recipe.likes | length }}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                        <p>Nombre total de recettes : {{ recipes | length }}</p>
                        <a href="{{ path('recipe_index') }}"><button type="button" class="btn btn-dark">Liste des recettes</button></a>
                    </div>
                </div>
            </div>
        </div>    
    </div>
    
  
    
{% endblock %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}